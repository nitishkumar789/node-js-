        <div class="row">
          <div class="col-md-12">
            <div class="card p-3 shadow my-5">
              <form action="personelmasters" name="myForm" method="post">
                <div class="col-md-6 col-lg-12 col-12 m-auto">
                  <div class="card border-0">
                    <div class="text-center">
                      <h3>CFL Personnel</h3>
                    </div>
                    <div class="col">
                      <div class="row">
                        <!-- <div class="col-12 col-md-6"> -->
                        <div class="col-12 col-md-3">
                          <div class="form-group">
                            <label for="inputCity">Date</label>
                            <input
                              type="Date"
                              name="date"
                              id="Date"
                              class="form-control f"
                              placeholder="Date"
                              required
                            />
                            <span
                              id="Date"
                              class="f-error test-danger font-weight-bold"
                            ></span>
                          </div>
                        </div>
                        <!-- ****************************************Block************************************** -->
                        <div class="col-12 col-md-3">
                          <div class="form-group">
                            <label for="inputCity">Block</label>
                            <select
                              class="form-control mr-2 gender a required"
                              name="block_id" required
                            >
                              <option value="" name="Block">Block</option>
                              <% if (blocks) { %> <% for(var i = 0; i <
                              blocks.length; i++) { %>
                              <option value="<%= blocks[i].id %>" id="Block">
                                <%= blocks[i].name %>
                              </option>
                              <% } %> <% } %>
                            </select>
                          </div>
                        </div>
                        <!-- ***********************************CFL_ID********************************************** -->
                        <div class="col-12 col-md-3">
                          <div class="form-group">
                            <label for="inputCity">CFL ID</label>
                            <input
                              type="text"
                              name="cfl_id"
                              id="cflid"
                              class="form-control"
                              onkeyup="validatecflid()"
                              placeholder="CFL ID"
                              required
                            />
                            <div id="cfliddiv" class="position-absolute"></div>
                          </div>
                        </div>
                        <!-- **********************************CFL Name************************************* -->
                        <div class="col-12 col-md-3">
                          <div class="form-group">
                            <label for="inputCity">CFL Name</label>
                            <input
                              type="text"
                              name="cfl_name"
                              id="CFLName"
                              class="form-control"
                              required
                              placeholder="CFL Name"
                              autocomplete="off"
                              onkeyup="validateCFLName()"
                            />
                            <div id="CFLNamediv" class="position-absolute"></div>
                          </div>
                        </div>
                        <!-- ******************************CFL Location************************************ -->
                        <div class="col-12 col-md-3">
                          <div class="form-group">
                            <label for="inputCity">CFL Location</label>
                            <input
                              type="text"
                              name="cfl_location"
                              id="CFLLocation"
                              class="form-control"
                              required
                              placeholder="CFL Location"
                              onkeyup="validateCFLLocation()"
                              autocomplete="off"
                            />
                           <div id="CFLLocationdiv" class="position-absolute"></div>
                          </div>
                        </div>
                        <!-- ****************************Trainer Name*************************************** -->
