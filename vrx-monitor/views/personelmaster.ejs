                      <td><%= list[i].cfl_name %></td>
                      <td><%= list[i].cfl_location %></td>
                      <td><%= list[i].trainer_name %></td>
                      <td><%= list[i].trainer_contact_no %></td>
                      <td><%= list[i].trainer_gender %></td>
                      <td><%= list[i].area_manager_name %></td>
                      <td><%= list[i].area_manager_contact_no %></td>
                      <td>
