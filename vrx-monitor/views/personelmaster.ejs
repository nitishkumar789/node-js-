                          onSubmit="if(!confirm('Are you sure?')){return false;}"
                          action="#"
                          method="post"
                        >
                          <button
                            type="submit"
                            class="btn btn-sm btn-primary trigger"
                          >
                            <i class="fa fa-trash"></i>
                          </button>
                        </form>
                      </td>
                    </tr>
                    <% } %> <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
